<%= form_with(model: @order, local: true, class: 'contact-form') do |form| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 ml-auto mr-auto text-center">
      <div class="form-group bmd-form-group">
        <label class="bmd-label-floating">Ваше имя</label>
        <%= form.text_field :name, id: :order_name, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 ml-auto mr-auto text-center">
      <div class="form-group bmd-form-group">
        <label class="bmd-label-floating">Адрес электронной почты</label>
        <%= form.text_field :email, id: :order_email, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 ml-auto mr-auto text-center">
      <div class="form-group bmd-form-group">
        <label class="bmd-label-floating">Телефон</label>
        <%= form.text_field :phone, id: :order_phone, class: 'form-control' %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4 ml-auto mr-auto text-center">
      <%= form.submit class: 'btn btn-primary btn-raised'%>
    </div>
  </div>
<% end %>
